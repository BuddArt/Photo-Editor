<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/btnGallery"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.609" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.609" />

    <TextView
        android:id="@+id/brtx"
        android:layout_width="70dp"
        android:layout_height="23dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="Brightness"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/slBrightness"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.733" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slBrightness"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:contentDescription="Slider"
        android:hapticFeedbackEnabled="true"
        android:stepSize="10.0"
        android:value="0"
        android:valueFrom="-250.0"
        android:valueTo="250.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.963"
        app:layout_constraintStart_toEndOf="@+id/brtx"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.737" />

    <TextView
        android:id="@+id/crtx"
        android:layout_width="70dp"
        android:layout_height="23dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="Contrast"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/slContrast"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.799" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slContrast"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:contentDescription="Slider"
        android:hapticFeedbackEnabled="true"
        android:stepSize="10.0"
        android:value="0"
        android:valueFrom="-250.0"
        android:valueTo="250.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.963"
        app:layout_constraintStart_toEndOf="@+id/crtx"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.808" />

    <TextView
        android:id="@+id/sattx"
        android:layout_width="70dp"
        android:layout_height="23dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="Saturation"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/slSaturation"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.867" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slSaturation"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:contentDescription="Slider"
        android:hapticFeedbackEnabled="true"
        android:stepSize="10.0"
        android:value="0"
        android:valueFrom="-250.0"
        android:valueTo="250.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.963"
        app:layout_constraintStart_toEndOf="@+id/sattx"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.878" />

    <TextView
        android:id="@+id/gamtx"
        android:layout_width="70dp"
        android:layout_height="23dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="Gamma"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/slGamma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.933" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slGamma"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:contentDescription="Slider"
        android:hapticFeedbackEnabled="true"
        android:stepSize="0.2"
        android:value="1"
        android:valueFrom="0.2"
        android:valueTo="4.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toEndOf="@+id/gamtx"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.948" />


</androidx.constraintlayout.widget.ConstraintLayout>